<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name = "sysmgr" namespace ="/sysmgr" extends ="mydefault-package" >	
		<!-- 用户管理 -->
		<action name = "userInfo" class= "com.lyu.drp.sysmanage.action.UserAction" method = "userInfo">
			<result name = "userInfo">/WEB-INF/pages/sysmanage/user/userInfo.jsp</result>
		</action>
		
		<action name = "changePwd" class= "com.lyu.drp.sysmanage.action.UserAction" method = "changePwd">
			<result name = "changePwd">/WEB-INF/pages/sysmanage/user/changePwd.jsp</result>
		</action>
		
		<action name = "saveChangePwd" class= "com.lyu.drp.sysmanage.action.UserAction" method = "saveChangePwd">
			<result type="json" name = "saveChangePwd">
				<param name="includeProperties">message</param>
			</result>
		</action>
		
		<action name = "getUserInfoById" class= "com.lyu.drp.sysmanage.action.UserAction" method = "getUserInfoById">
			<result type="json" name = "getUserInfoById">
				<param name="includeProperties">jsonObj</param>
			</result>
		</action>
		
		<action name = "saveUserInfo" class= "com.lyu.drp.sysmanage.action.UserAction" method = "saveUserInfo">
			<result type="json" name="saveUserInfo">
				<param name="includeProperties">message</param>
			</result>
		</action>
		
		<!-- 字典管理 -->
		<action name = "gotoDictList" class= "com.lyu.drp.sysmanage.action.DictAction" method = "gotoDictList">
			<result name = "dictList">/WEB-INF/pages/sysmanage/dict/dictList.jsp</result>
		</action>
		
		<action name = "gotoDictEdit" class= "com.lyu.drp.sysmanage.action.DictAction" method = "gotoDictEdit">
			<result name = "dictEdit">/WEB-INF/pages/sysmanage/dict/dictEdit.jsp</result>
		</action>
		
		<action name = "getDictList" class= "com.lyu.drp.sysmanage.action.DictAction" method = "getDictList">
			<result type="json">
				<param name="includeProperties">jsonObj</param>
			</result>
		</action>
		
		<action name = "saveDict" class= "com.lyu.drp.sysmanage.action.DictAction" method = "saveDict">
			<result type="json">
				<param name="includeProperties">message</param>
			</result>
		</action>
		
		<action name = "delDict" class= "com.lyu.drp.sysmanage.action.DictAction" method = "delDict">
			<result type="json">
				<param name="includeProperties">message</param>
			</result>
		</action>
		
	</package>

</struts>